.container
  .row
    .col-md-10.col-md-offset-2
      .section
        %h4.section-title Registro de Usuario
        .section-body
          .space20
          = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal contact'}) do |f|
            .form-group.text-center
              = devise_error_messages!
            .form-group
              %label.col-xs-12.col-sm-3.required{:for => "user_name"} Nombre
              .col-xs-12.col-sm-12.col-md-9
                = f.text_field :name, :autofocus => true, :class => 'form-control'
            .form-group
              %label.col-xs-12.col-sm-3.required{:for => "user_surname"} Apellido
              .col-xs-12.col-sm-12.col-md-9
                = f.text_field :surname, :class => 'form-control'
            .form-group
              %label.col-xs-12.col-sm-3.required{:for => "user_birthdate"} Fecha de nacimiento
              .col-xs-12.col-sm-12.col-md-9
                = f.date_select :birthdate, start_year: 1910, end_year: Date.current.year, use_month_numbers: true, order: [:day, :month, :year], :class => 'form-control'
            .form-group
              %label.col-xs-12.col-sm-3.required{:for => "user_email"} Email
              .col-xs-12.col-sm-12.col-md-9
                = f.email_field :email, :class => 'form-control', :required => 'required'
            .form-group
              %label.col-xs-12.col-sm-3.required{:for => "user_country_id"} Pa&iacute;s
              .col-xs-12.col-sm-12.col-md-9
                = f.select(:country_id, Country.all.map { |c| [c.name, c.id] }, {}, :class => 'form-control', :required => 'required')
            #state_group.form-group
              %label.col-xs-12.col-sm-3.required{:for => "user_state_id"} Provincia
              .col-xs-12.col-sm-12.col-md-9
                = f.select(:state_id, State.all.map { |c| [c.name, c.id] }, {}, :class => 'form-control', :required => 'required')
            .form-group
              %label.col-xs-12.col-sm-3.required{:for => "user_password"} Password
              .col-xs-12.col-sm-12.col-md-9
                = f.password_field :password, :class => 'form-control', :required => 'required'
            .form-group
              %label.col-xs-12.col-sm-3.control-label.required{:for => "user_password_confirmation"} Password (Confirmaci&oacute;n)
              .col-xs-12.col-sm-12.col-md-9
                = f.password_field :password_confirmation, :class => 'form-control', :required => 'required'
            .form-group
              .col-xs-12.col-sm-12
                = f.submit "Registrarme", :class => 'btn btn-primary'
